@using ASP.NETScholl.ViewModels;
@model AppUser
<h4 class="m-2">Edit a user</h4>
<div asp-validation-summary="All" class="text-danger"></div>
<form asp-action="Edit">
  <label class="m-2">User ID: @Model.Id</label>
  <div class="form-group m-2">
    <label asp-for="UserName"></label>
    <input type="text" class="form-control" asp-for="UserName" disabled/>
  </div>
  <div class="form-group m-2">
    <label asp-for="Email"></label>
    <input type="email" class="form-control" asp-for="Email" />
  </div>
  <div class="form-group m-2">
    <label for="password">Password</label>
    <input name="password"type="text" class="form-control"/>
  </div>
  <button type="submit" class="btn btn-success m-2">Save changes</button>
</form>